<h1>Log in</h1>

	<p>
		<%= flash[:error] if flash[:error] %>
		<%= flash[:notice] %>
	</p>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>
  
  <p class="button"><%= submit_tag "Log In" %></p>

<% end %>